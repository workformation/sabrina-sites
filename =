  <script>
    // State Management
    const state = {
      theme: localStorage.getItem('theme') || 'light',
      loading: false,
      sidebarCollapsed: localStorage.getItem('sidebarCollapsed') === 'true',
      sidebarOpen: false
    };

    // DOM Helpers
    const $ = (s) => document.querySelector(s);
    const $$ = (s) => document.querySelectorAll(s);

    // Theme Management
    function initTheme() {
      document.documentElement.setAttribute('data-theme', state.theme);
      updateThemeIcon();
    }

    function toggleTheme() {
      state.theme = state.theme === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', state.theme);
      localStorage.setItem('theme', state.theme);
      updateThemeIcon();
    }

    function updateThemeIcon() {
      const icon = $('#theme-toggle i');
      if (icon) {
        icon.setAttribute('data-lucide', state.theme === 'dark' ? 'sun' : 'moon');
        lucide.createIcons();
      }
    }

    // Sidebar Management
    function initSidebar() {
      const sidebar = $('#sidebar');
      if (state.sidebarCollapsed) {
        sidebar.classList.add('collapsed');
        updateSidebarIcon();
      }
    }

    function toggleSidebar() {
      const sidebar = $('#sidebar');
      state.sidebarCollapsed = !state.sidebarCollapsed;
      
      if (state.sidebarCollapsed) {
        sidebar.classList.add('collapsed');
      } else {
        sidebar.classList.remove('collapsed');
      }
      
      localStorage.setItem('sidebarCollapsed', state.sidebarCollapsed);
      updateSidebarIcon();
    }

    function updateSidebarIcon() {
      const icon = $('#sidebar-toggle i');
      if (icon) {
        icon.setAttribute('data-lucide', state.sidebarCollapsed ? 'chevron-right' : 'chevron-left');
        lucide.createIcons();
      }
    }

    function toggleMobileSidebar() {
      const sidebar = $('#sidebar');
      state.sidebarOpen = !state.sidebarOpen;
      
      if (state.sidebarOpen) {
        sidebar.classList.add('open');
      } else {
        sidebar.classList.remove('open');
      }
    }

    // Webhook Configuration
    const WEBHOOK_URL = 'https://n8n.srv1121126.hstgr.cloud/webhook/sabrina';

    async function sendToSabrina(message, data = {}) {
      state.loading = true;
      updateLoadingState();
      
      try {
        const response = await fetch(WEBHOOK_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            userMessage: message,
            timestamp: new Date().toISOString(),
            source: 'dashboard',
            ...data
          })
        });
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}`);
        }
        
        const result = await response.json();
        showNotification('Données envoyées avec succès', 'success');
        return result;
        
      } catch (error) {
        console.error('Erreur webhook:', error);
        showNotification('Erreur de connexion à SABRINA', 'error');
        return { error: true, message: error.message };
        
      } finally {
        state.loading = false;
        updateLoadingState();
      }
    }

    // Loading State Management
    function updateLoadingState() {
      const refreshBtn = $('#refresh-btn');
      const refreshIcon = refreshBtn?.querySelector('i');
      
      if (state.loading) {
        refreshBtn?.classList.add('loading');
        if (refreshIcon) {
          refreshIcon.classList.add('animate-spin');
        }
      } else {
        refreshBtn?.classList.remove('loading');
        if (refreshIcon) {
          refreshIcon.classList.remove('animate-spin');
        }
      }
    }

    // Data Refresh
    async function refreshDashboard() {
      if (state.loading) return;
      
      await sendToSabrina('Actualisation du dashboard', {
        action: 'refresh_dashboard',
        timestamp: new Date().toISOString()
      });
      
      // Simulate data refresh
      setTimeout(() => {
        showNotification('Dashboard actualisé', 'success');
      }, 1000);
    }

    // Notifications System
    function showNotification(message, type = 'info') {
      const container = $('#notifications') || createNotificationContainer();
      
      const notification = document.createElement('div');
      notification.className = `notification notification-${type} animate-slideInRight`;
      notification.innerHTML = `
        <i data-lucide="${type === 'success' ? 'check-circle' : type === 'error' ? 'x-circle' : 'info'}"></i>
        <span>${message}</span>
        <button onclick="this.parentElement.remove()"><i data-lucide="x"></i></button>
      `;
      
      container.appendChild(notification);
      lucide.createIcons();
      
      setTimeout(() => {
        if (notification.parentElement) {
          notification.remove();
        }
      }, 4000);
    }

    function createNotificationContainer() {
      const container = document.createElement('div');
      container.id = 'notifications';
      container.className = 'notifications';
      document.body.appendChild(container);
      return container;
    }

    // Search Functionality
    function initSearch() {
      const searchInput = $('.search-input');
      if (searchInput) {
        searchInput.addEventListener('input', debounce((e) => {
          const query = e.target.value.trim();
          if (query.length > 2) {
            performSearch(query);
          }
        }, 300));
      }
    }

    async function performSearch(query) {
      await sendToSabrina(`Recherche: ${query}`, {
        action: 'search',
        query: query
      });
    }

    // Utility Functions
    function debounce(func, wait) {
      let timeout;
      return function executedFunction(...args) {
        const later = () => {
          clearTimeout(timeout);
          func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
      };
    }

    // Event Handlers
    function initEventHandlers() {
      // Theme toggle
      $('#theme-toggle')?.addEventListener('click', toggleTheme);
      
      // Sidebar toggle
      $('#sidebar-toggle')?.addEventListener('click', toggleSidebar);
      $('#mobile-menu-toggle')?.addEventListener('click', toggleMobileSidebar);
      
      // Refresh button
      $('#refresh-btn')?.addEventListener('click', refreshDashboard);
      
      // Close mobile sidebar when clicking outside
      document.addEventListener('click', (e) => {
        const sidebar = $('#sidebar');
        const mobileToggle = $('#mobile-menu-toggle');
        
        if (state.sidebarOpen && 
            !sidebar.contains(e.target) && 
            !mobileToggle.contains(e.target)) {
          toggleMobileSidebar();
        }
      });
      
      // Navigation items
      $$('.nav-item').forEach(item => {
        item.addEventListener('click', async (e) => {
          e.preventDefault();
          const text = item.querySelector('.nav-item-text')?.textContent || 'Navigation';
          
          // Update active state
          $$('.nav-item').forEach(nav => nav.classList.remove('active'));
          item.classList.add('active');
          
          await sendToSabrina(`Navigation vers: ${text}`, {
            action: 'navigate',
            destination: text
          });
        });
      });
      
      // Table actions
      $$('.chart-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const title = btn.getAttribute('title') || 'Action';
          await sendToSabrina(`Action: ${title}`, {
            action: 'table_action',
            type: title
          });
        });
      });
    }

    // App Initialization
    function initApp() {
      initTheme();
      initSidebar();
      initSearch();
      initEventHandlers();
      
      // Send initial dashboard load event
      setTimeout(() => {
        sendToSabrina('Dashboard chargé', {
          action: 'dashboard_loaded',
          userAgent: navigator.userAgent,
          viewport: {
            width: window.innerWidth,
            height: window.innerHeight
          }
        });
      }, 1000);
    }

    // Initialize when DOM is ready
    document.addEventListener('DOMContentLoaded', () => {
      lucide.createIcons();
      initApp();
    });

    // Handle window resize for responsive behavior
    window.addEventListener('resize', debounce(() => {
      if (window.innerWidth > 768 && state.sidebarOpen) {
        toggleMobileSidebar();
      }
    }, 250));
  </script>
</body>
</html>